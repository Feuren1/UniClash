<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="UniClash"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.UniClash"
        tools:targetApi="31">
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_profile"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".LoginAcitivity"
            android:exported="false"
            android:label="@string/title_activity_login_acitivity"/>
        <activity
            android:name=".PokéActivity"
            android:exported="false"
            android:label="@string/title_activity_poké"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".ArenaActivity"
            android:exported="false"
            android:label="@string/title_activity_arena"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".InventoryActivity"
            android:exported="false"
            android:label="@string/title_activity_inventory"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".CritterProfileActivity"
            android:exported="false"
            android:label="@string/title_activity_critter_profile"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".CameraActivity"
            android:exported="false"
            android:label="@string/title_activity_camera"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".StudentHubActivity"
            android:exported="false"
            android:label="@string/title_activity_student_hub"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".Battle"
            android:exported="false"
            android:label="@string/title_activity_battle"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".MenuActivity"
            android:exported="false"
            android:label="@string/title_activity_menu"
            android:noHistory="true"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".CritterListActivity"
            android:exported="false"
            android:label="@string/title_activity_critter_list"
            android:noHistory="true"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".CritterDexActivity"
            android:exported="false"
            android:label="@string/title_activity_critter_dex"
            android:noHistory="true"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".MapActivity"
            android:exported="false"
            android:label="Map"
            android:noHistory="true"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".NewBuildingActivity"
            android:exported="false"
            android:label="@string/title_activity_new_building"
            android:noHistory="true"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".WildEncounterActivity"
            android:exported="false"
            android:label="WildEncounter"
            android:noHistory="true"
            android:theme="@style/Theme.UniClash" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="UniClash"
            android:noHistory="true"
            android:theme="@style/Theme.UniClash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>
